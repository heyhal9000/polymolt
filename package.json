{
  "name": "polymolt-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "./setup.sh",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:app\"",
    "dev:server": "cd server && npm run dev",
    "dev:app": "cd app && npm run dev",
    "build": "npm run build:program && npm run build:app",
    "build:program": "cd programs/polymolt && cargo build-bpf",
    "build:app": "cd app && npm run build",
    "test": "anchor test",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "workspaces": [
    "app",
    "server"
  ]
}